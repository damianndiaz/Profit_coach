# Archivo de ejemplo para configuración de ProFit Coach
# Copia este archivo como .env y completa con tus valores reales

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/profit_coach

# Configuración alternativa (individual)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=profit_coach
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_ASSISTANT_ID=asst_XXXXXXXXXXXXXXXXXXXXXXXX

# Email Configuration (Opcional - para funcionalidad de envío de rutinas)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USERNAME=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password_de_16_caracteres
EMAIL_FROM_NAME=ProFit Coach
EMAIL_FROM_EMAIL=tu_email@gmail.com

# Configuración de Aplicación
DEBUG=False
LOG_LEVEL=INFO

# Instrucciones:
# 1. Copia este archivo como .env en la raíz del proyecto
# 2. Reemplaza TODOS los valores XXXXXXX con tus credenciales reales
# 3. Para OpenAI: Obtén tu API key desde https://platform.openai.com/api-keys
# 4. Para email: Usa App Password de Gmail (no tu contraseña normal)
# 5. NUNCA subas el archivo .env a GitHub - está protegido por .gitignore
